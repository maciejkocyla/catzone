$("<%=j render(:partial => 'cats', :object => @cats) %>")
  .appendTo($(".infinite-table table"));

// Update pagination link
<% if @cats.last_page? %>
  $('.pagination').html("That's all, folks!");
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@cats, 'Next Page', :remote => true) %>");
<% end %>